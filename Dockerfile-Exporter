FROM golang:buster As builder

WORKDIR /Mikrotik

RUN apt-get update \
    && apt-get install git \
    && git clone -b master https://github.com/hafkensite/mikrotik-exporter.git \ 
    && cd mikrotik-exporter \
    && go build \
    && mv ./mikrotik-exporter /Mikrotik

FROM alpine:latest 

ENV TZ Asia/Shanghai

COPY --from=builder /Mikrotik/mikrotik-exporter /usr/bin/mikrotik-exporter

RUN set -e \
    && apk upgrade \
    && apk add bash tzdata \
    && ln -sf /usr/share/zoneinfo/${TZ} /etc/localtime \
    && echo ${TZ} > /etc/timezone \
    && rm -rf /var/cache/apk/*

EXPOSE 9436
 
ENTRYPOINT ["mikrotik-exporter", "-config-file", "config.yml"]
